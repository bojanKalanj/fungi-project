<%= admin_page_header(:species, :index) %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover dataTable">
            <thead>
            <tr>
              <th><%= t('shared.attributes.name') %></th>
              <th><%= t('species.attributes.familia') %></th>
              <th><%= t('species.attributes.growth_type') %></th>
              <th><%= t('species.attributes.nutritive_group') %></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @species.each_slice(2) do |species_pair| %>
              <% species_pair.each_with_index do |species, i| %>
                <tr class="<%= i == 0 ? 'odd' : 'even' %>">
                  <td><em><%= link_to species.full_name, admin_species_path(species) %></em></td>
                  <td><%= species.familia %></td>
                  <td><%= species.growth_type %></td>
                  <td><%= species.nutritive_group %></td>
                  <td>
                    <%= link_to edit_admin_species_path(species), class: 'btn btn-outline btn-primary btn-xs', title: t("helpers.links.edit") do %>
                      <%= fo_icon_tag(:edit) %>
                    <% end %>
                    <%= link_to admin_species_path(species, source: 'index'),
                                title: t('.destroy', :default => t("helpers.links.destroy")),
                                method: :delete,
                                data: { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                class: 'btn btn-xs btn-danger btn-outline' do %>
                      <%= fo_icon_tag(:delete) %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>