= admin_page_header(@localized_page, :show, no_header_icon: true)
dl.dl-horizontal.content
  = raw @localized_page.localized_field(:content)
dl.dl-horizontal
  - if @localized_page.first?
    .row
      .col-lg-8
        = render partial: 'localized_pages/home_page/species_count_graph', locals: { monthly_specimens_count: @monthly_specimens_count }
        = render partial: 'localized_pages/home_page/yearly_field_studies', locals: { yearly_field_studies: @yearly_field_studies }
      = render partial: 'localized_pages/home_page/general_db_stats', locals: { data: @general_db_stats }
    .row
      .col-lg-12
        .panel.panel-default
          .panel-body
            = t('project.disclaimer')
    div[style="width: 100%;"]
      .apv-pmf-logos
        .logo
          img[src="/images/vojvodina.png"]
          .title
            .no-wrap
              = t('project.apv.line_1')
            .no-wrap
              = t('project.apv.line_2')
            .no-wrap
              = t('project.apv.line_3')
        .logo
          img[src="/images/pmf.png"]
          .title
            .no-wrap
              = t('project.pmf.line_1')
            .no-wrap
              = t('project.pmf.line_2')
            .no-wrap
              = t('project.pmf.line_3')