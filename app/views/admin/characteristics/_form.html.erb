<%= admin_page_resource_subheader(characteristic, action, options) %>

<% path = characteristic.new_record? ? options[:index_path] : options[:path] %>

<%= simple_form_for characteristic, url: path, method: characteristic.new_record? ? :post : :patch, :html => { :class => 'form-horizontal' }, remote: true do |f| %>
  <%= admin_edit_fields(characteristic, fields, f) %>
  <%= admin_menu(characteristic, f, options) %>
<% end %>
