<%= simple_form_for @user, :html => { :class => "form-horizontal user" } do |f| %>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> User</legend>

    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :title %>
    <%= f.input :role %>
    <%= f.input :institution %>
    <%= f.input :phone %>


    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-default' %>
  </fieldset>

<% end %>
