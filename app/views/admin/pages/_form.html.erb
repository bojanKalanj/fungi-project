<%= simple_form_for [:admin, @page], html: { class: 'form-horizontal', data: { transliterate: 'title' } } do |f| %>
  <%= admin_edit_field(@page, :title, f, name: :title) %>

  <div class="form-group string optional col-sm-12">
    <label class="string optional control-label"><%= t('page.interface.localized_fields') %></label>

    <%= localized_tabs(f, 'admin/pages/shared/localized_page_form', @localized_page_fields) %>
  </div>

  <%= admin_menu(@page, f) %>
<% end %>
