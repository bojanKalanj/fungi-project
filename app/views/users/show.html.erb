<div class="container">
  <div class="col-sm-3">
    <div class="card card-shadow">
      <div class="card-body">
        <div class="user-img">
          <% if @user.avatar_pic %>
            <img class="card-img-top user-img" src="<%= @user.avatar_pic %>" alt="Card image cap">
          <% else %>
            <img class="card-img-top user-img" src="<%= asset_path( 'index/vucic.jpg' ) %>" alt="Card image cap">
          <% end %>
        </div>
        <h1 class="user-title"><%= @user.full_name %></h1>
        <hr>
        <% if @user.about %>
          <p class="text-muted"><%= @user.about %></p>
        <% else %>
          <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non.</p>
        <% end %>
        <hr>
        <div class="text-muted">
          <p>Email: <i><%= @user.email if @user.email %></i> </p>
          <p>Title: <i><%= @user.title if @user.title %></i> </p>
          <p>Role: <i><%= @user.role if @user.role %></i> </p>
          <p>Institution: <i><%= @user.institution if @user.institution %></i> </p>
          <p>Telefon: <i><%= @user.phone if @user.phone %></i> </p>
          <p>Korisnik registrovan: <i><%= @user.created_at.to_date %></i> </p>
        </div>
        <hr>
        <%= link_to 'Izmeni profil', edit_user_path(@user.id), class: 'btn' %>
      </div>
    </div>
  </div>
  <div class="col-sm-9">
    <div class="card card-shadow">
      <div class="card-body">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d22507.860018473515!2d19.69177472385645!3d45.15707840572651!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x475b094881e683e7%3A0xc1f22e3d1483a4c2!2z0KTRgNGD0YjQutCwINCz0L7RgNCw!5e0!3m2!1ssr!2srs!4v1530028777165" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        <hr>
        <h1>Svi nalazi korisnika</h1> <%= link_to 'Dodaj nalaz', new_specimen_path, class: 'btn'%>
        <hr>
        <div class="card-group">
          <% if @user.specimens_as_legator.any? %>
            <%= will_paginate @specimens %>
            <%= render "shared/specimens_cards", specimens: @specimens %>
            <%= will_paginate @specimens %>
          <% else %>
            <p>korisnik trenutno nema nalaza</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
