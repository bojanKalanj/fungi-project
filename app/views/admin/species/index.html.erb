<%- model_class = Species -%>
<div class="page-header">
  <h1 class="<%= fo_icon(:species) %>"> <%=t 'shared.sections.species' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <th><%= t('shared.attributes.name') %></th>
      <th><%= t('species.attributes.famillia') %></th>
      <th><%= t('species.attributes.growth_type') %></th>
      <th><%= t('species.attributes.nutritive_group') %></th>
    </tr>
  </thead>
  <tbody>
    <% @species.each do |species| %>
      <tr>
        <td>
          <%= link_to '', edit_admin_species_path(species), class: 'btn btn-sm fa fa-edit', title: t("helpers.links.edit") %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_species_path(species),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
        <td><%= link_to species.full_name, admin_species_path(species) %></td>
        <td><%= species.familia %></td>
        <td><%= species.growth_type %></td>
        <td><%= species.nutritive_group %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @species, renderer: BootstrapPagination::Rails %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_species_path,
            :class => 'btn btn-primary' %>
