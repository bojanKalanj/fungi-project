<%= content_tag :li, class: 'dropdown' do %>
  <%= link_to("#", :class => "dropdown-toggle", "data-toggle" => "dropdown") do %>
    <%= fo_icon_tag(:flag) %>
    <%= fo_icon_tag(:caret_down) %>
  <% end %>
  <%= drop_down_list do %>
    <% Language.all.each do |language| %>
      <% unless language.locale == I18n.locale.to_s %>
        <%= menu_item language_picker_url(language.locale) do %>
          <%= content_tag :span, '', class: "flag-icon flag-icon-#{language.flag}", title: language.title %>
          <%= content_tag :span, language.title %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>