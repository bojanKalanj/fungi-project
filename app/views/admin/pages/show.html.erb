<%- model_class = Page -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Title:</strong></dt>
  <dd><%= localized_tabs_preview @page, :title, 'admin/pages/show/localized_content' %></dd>

  <dt><strong>Content:</strong></dt>
  <dd><%= localized_tabs_preview @page, :content, 'admin/pages/show/localized_content' %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_pages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_page_path(@page), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            admin_page_path(@page),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
