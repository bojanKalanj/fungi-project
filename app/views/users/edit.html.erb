<div class="container">
  <div class="panel">
    <h1>Izmeni svoje podatke</h1>
    <%= simple_form_for(@user, url: user_path(@user), html: { method: :put }) do |f| %>
      <%= f.input :email, autofocus: true, label: 'Email' %>

      <%= f.input :first_name, label: 'Ime' %>

      <%= f.input :last_name, label: 'Prezime' %>

      <%= f.input :institution, label: 'Institucija' %>

      <%= f.input :phone, label: 'telefon' %>

      <%= f.input :about, label: 'Reci nesto o sebi' %>

      <%= f.file_field :avatar_pic, label: 'Dodajte avatar' %>

      <%= f.submit 'Izmeni', class: 'btn panel-btn' %>

    <% end %>
  </div>
</div>
