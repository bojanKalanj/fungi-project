<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('devise.actions.register') %></h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <%= f.input :email, autofocus: true, label: t('devise.fields.email') %>

        <div class="field">
          <%= f.label t('devise.fields.password') %>
          <% if @validatable %>
            <em>(<%= t('devise.actions.password_format', number: @minimum_password_length) %>)</em>
          <% end %>
          <br/>
          <%= f.input :password, autocomplete: 'off', label: false %>
        </div>

        <%= f.input :password_confirmation, autocomplete: "off", label: t('devise.fields.password_confirmation') %>

        <%= f.submit t('devise.actions.register'), class: 'btn panel-btn' %>
      <% end %>
      <br>
      <%= render 'custom_devise/shared/links' %>
    </div>
  </div>
</div>
