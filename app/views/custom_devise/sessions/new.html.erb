<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('devise.actions.please_sign_in') %></h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email, autofocus: true, label: false, placeholder: t('devise.fields.email') %>
        <%= f.input :password, autocomplete: 'off', label: false, placeholder: t('devise.fields.password') %>
        <%= f.submit t('devise.actions.sign_in'), class: 'btn btn-form' %>
      <% end %>
      <br>
      <%= render 'custom_devise/shared/links' %>
    </div>
  </div>
</div>
