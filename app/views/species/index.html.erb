<%- model_class = Species -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:familia) %></th>
      <th><%= model_class.human_attribute_name(:growth_type) %></th>
      <th><%= model_class.human_attribute_name(:nutritive_group) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @species.each do |species| %>
      <tr>
        <td><%= link_to species.full_name, species_path(species) %></td>
        <td><%= species.familia %></td>
        <td><%= species.growth_type %></td>
        <td><%= species.nutritive_group %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_species_path(species), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      species_path(species),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @species, renderer: BootstrapPagination::Rails %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_species_path,
            :class => 'btn btn-primary' %>
