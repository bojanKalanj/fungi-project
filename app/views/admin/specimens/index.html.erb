<%- model_class = Specimen -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:species_id) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>
      <th><%= model_class.human_attribute_name(:legator_id) %></th>
      <th><%= model_class.human_attribute_name(:determinator_id) %></th>
      <th><%= model_class.human_attribute_name(:determinator_text) %></th>
      <th><%= model_class.human_attribute_name(:habitats) %></th>
      <th><%= model_class.human_attribute_name(:substrates) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:approved) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @specimens.each do |specimen| %>
      <tr>
        <td><%= specimen.species.full_name %></td>
        <td><%= specimen.location_id %></td>
        <td><%= specimen.legator_id %></td>
        <td><%= specimen.determinator_id %></td>
        <td><%= specimen.determinator_text %></td>
        <td><%= specimen.habitats %></td>
        <td><%= specimen.substrates %></td>
        <td><%= specimen.date %></td>
        <td><%= specimen.quantity %></td>
        <td><%= specimen.approved %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admin_specimen_path(specimen), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_specimen_path(specimen), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_specimen_path(specimen),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @specimens, renderer: BootstrapPagination::Rails %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_specimen_path,
            :class => 'btn btn-primary' %>
