<%- model_class = Species -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:genus) %></th>
      <th><%= model_class.human_attribute_name(:familia) %></th>
      <th><%= model_class.human_attribute_name(:ordo) %></th>
      <th><%= model_class.human_attribute_name(:subclassis) %></th>
      <th><%= model_class.human_attribute_name(:classis) %></th>
      <th><%= model_class.human_attribute_name(:subphylum) %></th>
      <th><%= model_class.human_attribute_name(:phylum) %></th>
      <th><%= model_class.human_attribute_name(:synonyms) %></th>
      <th><%= model_class.human_attribute_name(:growth_type) %></th>
      <th><%= model_class.human_attribute_name(:nutritive_group) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @species.each do |species| %>
      <tr>
        <td><%= link_to species.id, species_path(species) %></td>
        <td><%= species.name %></td>
        <td><%= species.genus %></td>
        <td><%= species.familia %></td>
        <td><%= species.ordo %></td>
        <td><%= species.subclassis %></td>
        <td><%= species.classis %></td>
        <td><%= species.subphylum %></td>
        <td><%= species.phylum %></td>
        <td><%= species.synonyms %></td>
        <td><%= species.growth_type %></td>
        <td><%= species.nutritive_group %></td>
        <td><%= species.url %></td>
        <td></td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

